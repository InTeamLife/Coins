<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/coinIconImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_coin" />

    <TextView
        android:id="@+id/coinNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Coin Name"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/coinPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/coinHashrateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hashrate"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/coinDifficultyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Difficulty"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/coinProfitTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profit"
        android:textSize="18sp" />

</LinearLayout>
